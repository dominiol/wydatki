{% extends 'base.html.twig' %}

{% block title %}Dodawanie transakcji{% endblock %}

{% block body %}
    {% include '_partials/navigation.html.twig' %}

    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-th-list"></span>
                    Dodawanie transakcji
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_errors(form.title) }}
                            <label>Tytuł</label>
                            {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.value) }}
                            <label>Kwota (PLN)</label>
                            {{ form_widget(form.value, {attr: {class: 'form-control value-field'}}) }}
                        </div>
                        <div class="btn-group btn-group-justified main-navigation" role="group" aria-label="...">
                            <div class="btn-group" role="group">
                                <button id="value-positive" class="btn btn-success">
                                    Przychód
                                </button>
                            </div>
                            <div class="btn-group" role="group">
                                <button id="value-negative" class="btn btn-danger">
                                    Wydatek
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.isPlanned) }}
                            <label>Typ transakcji</label>
                            {{ form_widget(form.isPlanned, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="margin-top text-center">
                            {{ form_widget(form.save, {attr: {class: 'btn btn-success'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script>
        $('#value-positive').click(function(e) {
            e.preventDefault();

            if ($('.value-field').val()[0] == '-') {
                $('.value-field').val($('.value-field').val().slice(1));
            }
        });
        $('#value-negative').click(function(e) {
            e.preventDefault();

            if ($('.value-field').val()[0] != '-') {
                $('.value-field').val('-' + $('.value-field').val());
            }
        });
    </script>
{% endblock %}