{% extends 'base.html.twig' %}

{% block title %}Dodawanie transakcji{% endblock %}

{% block body %}
    {% include '_partials/navigation.html.twig' %}

    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-th-list"></span>
                    Dodawanie transakcji
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_errors(form.title) }}
                            <label>Tytu≈Ç</label>
                            {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.value) }}
                            <label>Kwota (PLN)</label>
                            {{ form_widget(form.value, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.isPlanned) }}
                            <label>Typ transakcji</label>
                            {{ form_widget(form.isPlanned, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="margin-top text-center">
                            {{ form_widget(form.save, {attr: {class: 'btn btn-success'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
